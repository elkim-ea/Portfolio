pipeline {
    agent any

    environment {
        SERVER_USER = "root"
        SERVER_HOST = "49.50.135.229"   // NCP ÏÑúÎ≤Ñ IP
        SERVER_DIR  = "/opt/matcha"
        BACKEND_IMAGE = "matcha-backend:latest"
        FRONTEND_IMAGE = "matcha-frontend:latest"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/elkim-ea/Portfolio.git'
            }
        }

        stage('Build Backend JAR') {
            steps {
                dir('Matcha/backend') {
                    sh './gradlew clean build -x test'
                }
            }
        }

        stage('Build Backend Docker Image') {
            steps {
                dir('Matcha/backend') {
                    sh "docker build -t ${BACKEND_IMAGE} ."
                }
            }
        }

        stage('Build Frontend Docker Image') {
            steps {
                dir('Matcha/frontend') {
                    sh "docker build -t ${FRONTEND_IMAGE} ."
                }
            }
        }

        stage('Copy compose & deploy scripts to NCP server') {
            steps {
                sh """
                scp -o StrictHostKeyChecking=no \
                    Matcha/docker-compose.yml \
                    Deploy/NCP/deploy.sh \
                    ${SERVER_USER}@${SERVER_HOST}:${SERVER_DIR}/
                """
            }
        }

        stage('Deploy on NCP server') {
            steps {
                sh """
                ssh -o StrictHostKeyChecking=no ${SERVER_USER}@${SERVER_HOST} \\
                'cd ${SERVER_DIR} && chmod +x deploy.sh && ./deploy.sh'
                """
            }
        }
    }

    post {
        success {
            echo "üéâ Deployment Successful!"
        }
        failure {
            echo "‚ùå Deployment Failed!"
        }
    }
}
